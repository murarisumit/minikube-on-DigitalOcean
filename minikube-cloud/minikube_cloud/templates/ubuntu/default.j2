apt-get update && apt-get install -y apt-transport-https
curl -LO https://storage.googleapis.com/kubernetes-release/release/{{ kubectl_version }}/bin/linux/amd64/kubectl && chmod +x kubectl && mv kubectl /usr/local/bin/kubectl
apt-get update
apt-get install -y socat docker.io
curl -Lo minikube https://storage.googleapis.com/minikube/releases/{{ minikube_version }}/minikube-linux-amd64 && chmod +x minikube && mv minikube /usr/local/bin/minikube
minikube config set embed-certs true
minikube start --vm-driver none
mkdir -p ~/.kube
cp /var/lib/minikube/kubeconfig ~/.kube/config
